generator client {
  provider = "prisma-client"
  output = "./client"
  moduleFormat = "esm"
}

datasource db {
  provider = "postgresql"
}


enum UserType {
  CLIENT
  BUSINESS
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  photo     String
  type      UserType

  clientBookings   Booking[] @relation("ClientBookings")
  businessBookings Booking[] @relation("BusinessBookings")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id         String   @id @default(uuid())
  date       DateTime
  time       String

  client     User     @relation("ClientBookings", fields: [clientId], references: [id])
  clientId   String

  business   User     @relation("BusinessBookings", fields: [businessId], references: [id])
  businessId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

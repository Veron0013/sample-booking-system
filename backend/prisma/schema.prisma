generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}


enum UserType {
  CLIENT
  BUSINESS
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  phone      String?

  photo      String?
  isVerified Boolean  @default(false)
  type       UserType @default(CLIENT)

  clientBookings   Booking[] @relation("ClientBookings")
  businessBookings Booking[] @relation("BusinessBookings")

  session    Session? @relation("UserSession")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Booking {
  id         String   @id @default(uuid())
  date       DateTime
  time       String

  client     User     @relation("ClientBookings", fields: [clientId], references: [id])
  clientId   String

  business   User     @relation("BusinessBookings", fields: [businessId], references: [id])
  businessId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Session {
  id          String   @id @default(uuid())
  userId      String   @unique
  refreshHash String
  expiresAt   DateTime

  user        User     @relation("UserSession", fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([expiresAt])
}
